@using MakaleEntities.ViewModel

@model LoginModel
@{
    ViewBag.Title = "Giris";
}
<link href="~/Content/login.css" rel="stylesheet" />
<link href="~/Content/Validation_css.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">Giriş Ekranı</h1>
                </div>
                <div class="main-content">

                    @Html.ValidationSummary(false) @*modele eklediğim mesajları vermek için bunu ekledik*@

                    <div class="input-group ">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user" aria-hidden="true"></span></span>

                        @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", placeholder = "Kullanıcı adı" })

                    </div>
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock" aria-hidden="true"></span></span>

                        @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", placeholder = "Şifre", type = "password" })
                    </div>

                    @*<div class="checkbox">
                            <label class="remember">
                                <input name="remember" type="checkbox"> Remember Me
                            </label>
                        </div>*@

                    <div class="form-group ">
                        <button type="submit" class="btn btn-danger btn-lg btn-block login-button">Giriş</button>
                    </div>
                </div>
            </div>
        </div>
    </section>

}



