@model IEnumerable<MakaleEntities.Kullanici>

@{
    ViewBag.Title = "Kullanıcılar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row">
    <div class="col-md-10 col-md-offset-0">

        <div class="row">
            <div class="col-md-10 col-md-offset-1">
                <h2> Kullanıcılar</h2>
                <p>
                    @Html.ActionLink("Yeni Kullanıcı Oluştur", "Create", null,new { @class = "btn btn-success" })
                </p>
                
            </div>

        </div>

        
        <table class="table">
            <tr>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.Adi)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.Soyad)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.KullaniciAdi)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.Sifre)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.ProfilResimDosyaAdi)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.Aktif)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.AktifGuid)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.Admin)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.KayitTarihi)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.DegistirmeTarihi)
                </th>
                <th class="alert-info">
                    @Html.DisplayNameFor(model => model.DegistirenKullanici)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Adi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soyad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KullaniciAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sifre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ProfilResimDosyaAdi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Aktif)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AktifGuid)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Admin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.KayitTarihi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegistirmeTarihi)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DegistirenKullanici)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-success" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>

    </div>

</div>


